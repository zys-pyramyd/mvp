# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=pyramyd_db

# JWT Secret for Authentication (CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Encryption Key for Sensitive Data (GENERATE NEW IN PRODUCTION)
# Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Payment Gateway Keys (Paystack)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# FarmHub Split Group (Sophie Farms Investment Ltd)
FARMHUB_SPLIT_GROUP=SPL_dCqIOTFNRu
FARMHUB_SUBACCOUNT=ACCT_c94r8ia2jeg41lx

# SMS/Phone Verification (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Default Admin User (Auto-created on first startup)
# ⚠️ CHANGE THESE IN PRODUCTION!
ADMIN_EMAIL=admin@pyramydhub.com
ADMIN_PASSWORD=change-this-strong-password-minimum-16-chars

# Environment
ENVIRONMENT=development  # development, staging, production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Payment Commission Rates
AGENT_BUYER_COMMISSION_RATE=0.04  # 4% for agent buyers
FARMHUB_SERVICE_CHARGE=0.10  # 10% service charge for FarmHub
COMMUNITY_COMMISSION=0.025  # 2.5% commission for Community
COMMUNITY_SERVICE=0.10  # 10% service charge for Community
